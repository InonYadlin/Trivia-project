<Window x:Class="StatisticsApp.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Statistics" Height="200" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Personal Stats" Width="200" Height="40" Margin="10" Click="PersonalStatsButton_Click"/>
            <Button Content="High Scores" Width="200" Height="40" Margin="10" Click="HighScoresButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

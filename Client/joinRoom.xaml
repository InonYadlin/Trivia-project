<Window x:Class="joinRoom.JoinRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Join Room" Height="400" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Room ID:" Margin="0,0,0,5"/>
            <TextBox x:Name="RoomIdTextBox" Margin="0,0,0,10"/>

            <Button Content="Join Room" Click="JoinRoomButton_Click"/>

            <ListBox x:Name="RoomsListBox" Margin="0,20,0,10" Height="100" RenderTransformOrigin="0.5,0.5">
                <ListBox.RenderTransform>
                    <TransformGroup>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </ListBox.RenderTransform>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
    
    
